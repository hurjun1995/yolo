{
  "prettier.eslintIntegration": true,
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/*.git": true,
    "**/*.expo": true,
    ".*": true,
    "**/*.DS_Store": true,
    "node_modules/": true
  },
  "flow.useNPMPackagedFlow": true,
  "flow.runOnAllFiles": true,
  // Enable/disable JavaScript validation. (For Flow)
  "javascript.validate.enable": false,
  "[javascript]": {
    "editor.formatOnSave": true
  }
}
